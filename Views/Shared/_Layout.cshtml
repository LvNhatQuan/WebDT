@using Microsoft.AspNetCore.Mvc
@using Microsoft.AspNetCore.Mvc.ViewComponents

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DT Shop</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <style>
        body {
            background: #f7f7f7;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 20px;
        }

        .product-card {
            transition: 0.2s;
        }

            .product-card:hover {
                transform: translateY(-3px);
            }
    </style>
</head>

<body>

    <!-- NAVIGATION BAR -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
            <div class="container">
                <a class="navbar-brand" href="/">DT Shop</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">

                    <!-- MENU Dynamic (MenuDynamicViewComponent) -->
                    @await Component.InvokeAsync("MenuDynamic")

                    <ul class="navbar-nav ms-auto">
                        <!-- User login status -->
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <span class="nav-link">👋 Xin chào, @User.Identity.Name</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" href="/Account/Logout">Đăng xuất</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Account/Login">Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Account/Register">Đăng ký</a>
                            </li>
                        }

                        <!-- Cart icon -->
                        <li class="nav-item ms-3">
                            <a href="/Cart" class="btn btn-outline-primary">
                                🛒 Giỏ hàng
                            </a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>


    <!-- MAIN CONTENT -->
    <main class="container mt-4">
        @RenderBody()
    </main>


    <!-- FOOTER -->
    <footer class="text-center text-muted py-4 mt-5">
        © 2025 DT Group. All rights reserved.
    </footer>


    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
