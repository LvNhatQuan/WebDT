@model WebD_T.Areas.Admin.Models.UserAdmin

@{
    ViewData["Title"] = "Chi tiết tài khoản";
}

<div class="container-fluid px-4">
    <h2 class="mt-4 fw-bold">Chi tiết tài khoản</h2>

    <div class="card shadow-sm mt-3">
        <div class="card-body">

            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Username</dt>
                <dd class="col-sm-9">@Model.Username</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Mật khẩu</dt>
                <dd class="col-sm-9">@Model.Password</dd>

                <dt class="col-sm-3">Họ tên</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Số điện thoại</dt>
                <dd class="col-sm-9">@Model.PhoneNumber</dd>

                <dt class="col-sm-3">Quyền</dt>
                <dd class="col-sm-9">
                    @if (Model.Role == "admin")
                    {
                        <span class="badge bg-danger">Admin</span>
                    }
                    else if (Model.Role == "staff")
                    {
                        <span class="badge bg-warning text-dark">Nhân viên</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Khách hàng</span>
                    }
                </dd>
            </dl>

            <div class="d-flex justify-content-end mt-4">
                <a href="/Admin/UserAdmin" class="btn btn-secondary me-2">Quay lại</a>
                <a href="/Admin/UserAdmin/Edit/@Model.Id" class="btn btn-primary me-2">Sửa</a>
                <a href="/Admin/UserAdmin/Delete/@Model.Id" class="btn btn-danger">Xóa</a>
            </div>

        </div>
    </div>
</div>