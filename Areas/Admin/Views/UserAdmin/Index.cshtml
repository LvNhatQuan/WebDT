@model List<WebD_T.Areas.Admin.Models.UserAdmin>

@{
    ViewData["Title"] = "Quản lý tài khoản";
}

<div class="container-fluid px-4">
    <h2 class="mt-4 fw-bold">Quản lý tài khoản</h2>

    <div class="d-flex justify-content-between align-items-center mt-3">
        <h5 class="text-muted">Danh sách người dùng</h5>

        <a class="btn btn-primary" href="/Admin/UserAdmin/Create">
            <i class="bi bi-plus-lg"></i> Thêm tài khoản
        </a>
    </div>

    <div class="card shadow-sm mt-3">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Họ tên</th>
                        <th>Số điện thoại</th>
                        <th>Quyền</th>
                        <th class="text-end">Thao tác</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var u in Model)
                    {
                        <tr>
                            <td>@u.Id</td>
                            <td>@u.Username</td>
                            <td>@u.Email</td>
                            <td>@u.FullName</td>
                            <td>@u.PhoneNumber</td>

                            <td>
                                @if (u.Role == "admin")
                                {
                                    <span class="badge bg-danger">Admin</span>
                                }
                                else if (u.Role == "staff")
                                {
                                    <span class="badge bg-warning text-dark">Nhân viên</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Khách hàng</span>
                                }
                            </td>

                            <td class="text-end">
                                <a href="/Admin/UserAdmin/Details/@u.Id" class="btn btn-sm btn-outline-secondary me-1">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="/Admin/UserAdmin/Edit/@u.Id" class="btn btn-sm btn-outline-primary me-1">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a href="/Admin/UserAdmin/Delete/@u.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="text-center text-muted py-4">
                    <i class="bi bi-inbox" style="font-size: 40px;"></i>
                    <p class="mt-2">Chưa có tài khoản nào.</p>
                </div>
            }
        </div>
    </div>
</div>