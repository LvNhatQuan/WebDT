@model List<WebD_T.Areas.Admin.Models.OrderAdmin>

@{
    ViewData["Title"] = "Quản lý đơn hàng";
}

<div class="container-fluid px-4">

    <h2 class="mt-4 fw-bold">Quản lý đơn hàng</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="card shadow-sm mt-3">
        <div class="card-body">

            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Khách hàng</th>
                        <th>Ngày đặt</th>
                        <th>Tổng tiền</th>
                        <th>Địa chỉ giao</th>
                        <th class="text-end">Thao tác</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.Id</td>

                            <td>
                                @if (order.UserName != null)
                                {
                                    <span>@order.UserName</span>
                                }
                                else
                                {
                                    <span class="text-muted">Không có</span>
                                }
                            </td>

                            <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>

                            <td class="fw-bold text-danger">
                                @order.GrandTotal.ToString("N0") đ
                            </td>

                            <td style="max-width: 260px; white-space: normal;">
                                @order.ShippingAddress
                            </td>

                            <td class="text-end">
                                <a href="/Admin/OrderAdmin/Details/@order.Id"
                                   class="btn btn-sm btn-outline-primary me-1">
                                    <i class="bi bi-eye"></i> Xem
                                </a>

                                <a href="/Admin/OrderAdmin/Delete/@order.Id"
                                   class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="text-center text-muted py-4">
                    <i class="bi bi-inbox" style="font-size: 40px;"></i>
                    <p class="mt-3">Chưa có đơn hàng nào.</p>
                </div>
            }

        </div>
    </div>
</div>
