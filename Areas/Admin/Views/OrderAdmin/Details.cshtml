@model WebD_T.Areas.Admin.Models.OrderAdmin

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="container-fluid px-4">

    <h2 class="mt-4 fw-bold">Chi tiết đơn hàng #@Model.Id</h2>

    <a href="/Admin/OrderAdmin" class="btn btn-secondary my-3">
        <i class="bi bi-arrow-left"></i> Quay lại danh sách
    </a>

    <div class="card shadow-sm mb-4">
        <div class="card-header fw-bold">Thông tin đơn hàng</div>
        <div class="card-body">

            <p><strong>Mã đơn hàng:</strong> @Model.Id</p>
            <p>
                <strong>Khách hàng:</strong>
                @if (Model.UserName != null)
                {
                    @Model.UserName
                }
                else
                {
                    <span class="text-muted">Không xác định</span>
                }
            </p>

            <p><strong>Ngày đặt hàng:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>

            <p>
                <strong>Địa chỉ giao hàng:</strong><br />
                @Model.ShippingAddress
            </p>

            <hr />

            <p><strong>Tạm tính:</strong> @Model.SubTotal.ToString("N0") đ</p>
            <p><strong>Giảm giá:</strong> @Model.DiscountAmount.ToString("N0") đ</p>
            <p><strong>Phí vận chuyển:</strong> @Model.ShippingFee.ToString("N0") đ</p>

            <h4 class="mt-3 text-danger fw-bold">
                Tổng thanh toán: @Model.GrandTotal.ToString("N0") đ
            </h4>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header fw-bold">Sản phẩm trong đơn</div>
        <div class="card-body p-0">

            <table class="table table-bordered mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Sản phẩm</th>
                        <th class="text-center">Số lượng</th>
                        <th class="text-end">Giá</th>
                        <th class="text-end">Thành tiền</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td class="text-center">@item.Quantity</td>
                            <td class="text-end">@item.Price.ToString("N0") đ</td>
                            <td class="text-end">@item.TotalPrice.ToString("N0") đ</td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Items.Any())
            {
                <div class="text-center text-muted py-4">
                    <i class="bi bi-inbox" style="font-size: 40px;"></i>
                    <p class="mt-2">Đơn hàng này không có sản phẩm.</p>
                </div>
            }

        </div>
    </div>

</div>
