@model WebDT.Areas.Admin.Models.OrderAdmin

@{
    ViewData["Title"] = "Xóa đơn hàng";
}

<div class="container-fluid px-4">

    <h2 class="mt-4 text-danger fw-bold">Xóa đơn hàng #@Model.Id</h2>

    <div class="alert alert-warning mt-3">
        <i class="bi bi-exclamation-triangle-fill"></i>
        Bạn có chắc chắn muốn xóa đơn hàng này?
        Hành động này không thể hoàn tác.
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header fw-bold">Thông tin đơn hàng</div>
        <div class="card-body">

            <p><strong>Mã đơn hàng:</strong> @Model.Id</p>

            <p>
                <strong>Khách hàng:</strong>
                @if (Model.UserName != null)
                {
                    @Model.UserName
                }
                else
                {
                    <span class="text-muted">Không xác định</span>
                }
            </p>

            <p><strong>Ngày đặt:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>

            <p>
                <strong>Địa chỉ giao:</strong><br />
                @Model.ShippingAddress
            </p>

            <hr />

            <h4 class="fw-bold text-danger">
                Tổng thanh toán: @Model.GrandTotal.ToString("N0") đ
            </h4>

        </div>
    </div>

    <!-- FORM DELETE -->
    <form method="post">
        <button type="submit" class="btn btn-danger px-4">
            <i class="bi bi-trash"></i> Xóa đơn hàng
        </button>

        <a href="/Admin/OrderAdmin" class="btn btn-secondary ms-2 px-4">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </form>

</div>
