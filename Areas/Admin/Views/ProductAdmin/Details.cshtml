@model WebD_T.Areas.Admin.Models.ProductAdmin


<h2 class="h4 mb-3">Chi tiết sản phẩm</h2>

<div class="card">
    <div class="card-body row">
        <div class="col-md-4 text-center mb-3">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded border"
                     style="max-height:250px;" />
            }
            else
            {
                <div class="text-muted fst-italic">Chưa có hình ảnh</div>
            }
        </div>
        <div class="col-md-8">
            <dl class="row mb-0">
                <dt class="col-sm-4">Mã sản phẩm</dt>
                <dd class="col-sm-8">@Model.Id</dd>

                <dt class="col-sm-4">Tên sản phẩm</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4">Danh mục</dt>
                <dd class="col-sm-8">@Model.CategoryName</dd>

                <dt class="col-sm-4">Giá</dt>
                <dd class="col-sm-8">@String.Format("{0:N0} đ", Model.Price)</dd>

                <dt class="col-sm-4">Số lượng tồn</dt>
                <dd class="col-sm-8">@Model.StockQuantity</dd>

                <dt class="col-sm-4">Trạng thái</dt>
                <dd class="col-sm-8">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Đang bán</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Ngừng bán</span>
                    }
                </dd>

                <dt class="col-sm-4">Ngày tạo</dt>
                <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-4">Mô tả</dt>
                <dd class="col-sm-8">@Model.Description</dd>
            </dl>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-area="Admin" asp-controller="ProductAdmin" asp-action="Edit"
       asp-route-id="@Model.Id" class="btn btn-primary">Sửa</a>
    <a asp-area="Admin" asp-controller="ProductAdmin" asp-action="Index"
       class="btn btn-secondary ms-1">Quay lại</a>
</div>
