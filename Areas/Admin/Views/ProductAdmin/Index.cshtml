@model IEnumerable<WebD_T.Areas.Admin.Models.ProductAdmin>

@{
    ViewData["Title"] = "Quản lý sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="h4 mb-3">Quản lý sản phẩm</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<p>
    <a asp-area="Admin" asp-controller="ProductAdmin" asp-action="Create"
       class="btn btn-primary">
        + Thêm sản phẩm
    </a>
</p>

<table class="table table-striped table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th style="width:60px;">#</th>
            <th>Tên sản phẩm</th>
            <th>Danh mục</th>
            <th class="text-end">Giá</th>
            <th class="text-center">Tồn kho</th>
            <th class="text-center">Trạng thái</th>
            <th style="width:260px;" class="text-end">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @{
            var stt = 1;
        }
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@stt</td>
                    <td>@item.Name</td>
                    <td>@item.CategoryName</td>
                    <td class="text-end">@String.Format("{0:N0} đ", item.Price)</td>
                    <td class="text-center">@item.StockQuantity</td>
                    <td class="text-center">
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Đang bán</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Ngừng bán</span>
                        }
                    </td>
                    <td class="text-end">
                        <a asp-area="Admin" asp-controller="ProductAdmin" asp-action="Details"
                           asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                            Chi tiết
                        </a>
                        <a asp-area="Admin" asp-controller="ProductAdmin" asp-action="Edit"
                           asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                            Sửa
                        </a>
                        <a asp-area="Admin" asp-controller="ProductAdmin" asp-action="Delete"
                           asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                            Xóa
                        </a>
                    </td>
                </tr>
                stt++;
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center text-muted">
                    Chưa có sản phẩm nào.
                </td>
            </tr>
        }
    </tbody>
</table>
