@model List<WebDT.Areas.Admin.Models.CategoryAdmin>

@{
    ViewData["Title"] = "Quản lý danh mục";
}


@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between mb-3">
    <h2 class="h4">Danh sách danh mục</h2>
    <a asp-area="Admin" asp-controller="CategoryAdmin" asp-action="Create"
       class="btn btn-add">
        Thêm mới
    </a>
</div>

<div class="admin-card">
    <table class="table table-striped table-hover align-middle mb-0">
        <thead class="table-light">
            <tr>
                <th style="width:60px;">#</th>
                <th>Tên danh mục</th>
                <th>Mô tả</th>
                <th class="text-end" style="width:220px;">Thao tác</th>
            </tr>
        </thead>

        <tbody>
            @{
                var stt = 1;
            }

            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@stt</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td class="text-end">

                            <a asp-area="Admin"
                               asp-controller="CategoryAdmin"
                               asp-action="Edit"
                               asp-route-id="@item.Id"
                               class="btn btn-sm btn-edit me-1">
                                <i class="bi bi-pencil"></i> Sửa
                            </a>

                            <a asp-area="Admin"
                               asp-controller="CategoryAdmin"
                               asp-action="Delete"
                               asp-route-id="@item.Id"
                               class="btn btn-sm btn-delete">
                                <i class="bi bi-trash"></i> Xóa
                            </a>

                        </td>
                    </tr>

                    stt++;
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted py-3">
                        Chưa có danh mục nào.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
