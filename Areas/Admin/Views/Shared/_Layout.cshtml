@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trang Quản Lý D&T</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebDT.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

    <link rel="icon" type="image/png" href="~/Images/Logo_Bg/logo trang.png" />

    <style>
        body {
            background-color: #f4f5f7;
        }

        .admin-layout {
            min-height: 100vh;
        }

        /* Sidebar */
        .admin-sidebar {
            width: 260px;
            background: #004225;
            color: #e5e7eb;
            padding: 20px 0;
        }

            .admin-sidebar .brand {
                font-size: 1.05rem;
                font-weight: 600;
                padding: 0 24px 16px 24px;
                color: #f9fafb;
            }

            .admin-sidebar .menu-title {
                font-size: 0.75rem;
                letter-spacing: .08em;
                text-transform: uppercase;
                padding: 0 24px;
                margin-top: 12px;
                margin-bottom: 6px;
                color: #9ca3af;
            }

            .admin-sidebar .nav-link {
                color: #e5e7eb;
                padding: 8px 24px;
                font-size: 0.9rem;
                border-radius: 999px;
                margin: 2px 10px;
            }

                .admin-sidebar .nav-link:hover,
                .admin-sidebar .nav-link.active {
                    background: #374151;
                    color: #ffffff;
                }

                .admin-sidebar .nav-link i {
                    margin-right: 8px;
                }

            .admin-sidebar .nav-sub {
                font-size: 0.8rem;
                padding-left: 52px;
                color: #9ca3af;
            }

        /* Main content */
        .admin-main {
            flex: 1;
            background: #f4f5f7;
        }

        .admin-topbar {
            height: 60px;
            background: #ffffff;
            border-bottom: 1px solid #e5e7eb;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 24px;
        }

            .admin-topbar .title {
                font-weight: 600;
            }

        .admin-content {
            padding: 24px;
        }

        .admin-card {
            background: #ffffff;
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(15, 23, 42, 0.08);
            padding: 20px 24px;
        }

        .admin-card-title {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 16px;
        }

        /* Nút màu giống hình */
        .btn-add {
            background-color: #f59e0b;
            border-color: #f59e0b;
            color: #fff;
        }

        .btn-edit {
            background-color: #3b82f6;
            border-color: #3b82f6;
            color: #fff;
        }

        .btn-delete {
            background-color: #ef4444;
            border-color: #ef4444;
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="d-flex admin-layout">

        <!-- SIDEBAR -->
        <aside class="admin-sidebar d-flex flex-column">
            <div class="brand mb-3">
                <div class="d-flex align-items-center">
                    <img src="~/Images/Logo_Bg/logo trang.png" alt="Logo D&T" style="height:40px; width:auto; margin-right:8px;" />
                    <span style="font-weight:bold; font-size:18px;">Trang Quản Lý D&T</span>
                </div>
            </div>

            <div class="menu-title">Danh mục quản lý</div>
            <nav class="nav flex-column mb-2">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "ProductAdmin" ? "active" : "")"
                   asp-area="Admin" asp-controller="ProductAdmin" asp-action="Index">
                    <i class="bi bi-box-seam"></i> Quản lý sản phẩm
                </a>

                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "CategoryAdmin" ? "active" : "")"
                   asp-area="Admin" asp-controller="CategoryAdmin" asp-action="Index">
                    <i class="bi bi-tags"></i> Danh mục sản phẩm
                </a>
            </nav>

            <div class="menu-title mt-3">Chức năng khác</div>
            <nav class="nav flex-column mb-2">
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="UserAdmin" asp-action="Index">
                        <i class="bi bi-people"></i> Quản lý tài khoản
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="OrderAdmin" asp-action="Index">
                        <i class="bi bi-bag-check"></i> Quản lý đơn hàng
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="CustomerAdmin" asp-action="Index">
                        <i class="bi bi-bag-check"></i> Quản lý khách hàng
                    </a>
                </li>
                <a class="nav-link" href="#"><i class="bi bi-person-badge"></i> Quản lý nhân viên</a>
                <a class="nav-link" href="#"><i class="bi bi-ticket-perforated"></i> Quản lý giảm giá</a>
                <a class="nav-link" href="#"><i class="bi bi-truck"></i> Quản lý giao hàng</a>
                <a class="nav-link" href="#"><i class="bi bi-chat-left-quote"></i> Đánh giá sản phẩm</a>
                <a class="nav-link" href="#"><i class="bi bi-journal-text"></i> Nhật ký quản lý</a>
                <a class="nav-link" href="#"><i class="bi bi-graph-up-arrow"></i> Thống kê sản phẩm</a>
            </nav>

            <div class="mt-auto">
                <div class="menu-title">Tài khoản</div>
                <nav class="nav flex-column">
                    <a class="nav-link text-danger" href="/Account/Logout">
                        <i class="bi bi-box-arrow-right"></i> Đăng xuất
                    </a>
                </nav>
            </div>
        </aside>

        <!-- MAIN -->
        <div class="admin-main d-flex flex-column">
            

            <!-- CONTENT -->
            <div class="admin-content">
                <div class="admin-card">
                    <div class="admin-card-title">
                        @ViewData["Title"]
                    </div>

                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
